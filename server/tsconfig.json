{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest"],
    "lib": ["es2020.promise", "ES2019.Array"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
